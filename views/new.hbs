<div class="container-fluid d-flex justify-content-center">
  <form action="/records" method="POST">
    <div class="mt-3 form-group">
      <label for="category">請選擇類別</label>
      <select name="category" class="form-control" required>
        {{#each categories}}
        <option value="{{this._id}}">{{this.title}}</option>
        {{/each}}
      </select>
    </div>
    <div class="mt-3 form-group">
      <label for="name">請輸入花費名稱</label>
      <input type="text" class="form-control" name="name" placeholder="花費名稱" required>
    </div>
    <div class="mt-3 form-group">
      <label for="amount">請輸入花費金額</label>
      <input type="number" class="form-control" min="1" step="1" name="amount" required>
    </div>
    <div class="mt-3 form-group">
      <label for="date">請輸入日期</label>
      <input type="date" class="form-control" name="date">
    </div>

    <div class="mt-3 form-group">
      <button type="submit" class="btn btn-warning">新增支出</button>
    </div>
  </form>
</div>