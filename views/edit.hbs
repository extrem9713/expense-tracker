<div class="container-fluid justify-content-center align-items-center" style="max-width: 30%;">
  <form action="/records/{{record._id}}?_method=PUT" method="POST">
    <div class="row mt-3">
      <div class="col-md-5">
        <p>*必填欄位</p>
      </div>
      <div class="col-md-7">
        <p>請輸入你的支出</p>
      </div>
    </div>
    <div class="row mt-3 form-group">
      <div class="col-md-5">
        <label for="name">名稱*</label>
      </div>
      <div class="col-md-7">
        <input type="text" class="form-control" name="name" placeholder="花費名稱" value="{{record.name}}" required>
      </div>
    </div>

    <div class="row mt-3 form-group">
      <div class="col-md-5">
        <label for="date">日期*</label>
      </div>
      <div class="col-md-7">
        <input type="date" class="form-control" name="date" value="{{toDate record.date}}" required>
      </div>
    </div>

    <div class="row mt-3 form-group">
      <div class="col-md-5">
        <label for="category">類別*</label>
      </div>
      <div class="col-md-7">
        <select name="category" value="{{record.category}}" class="form-control" required>
          {{#each categories}}
          <option value="{{this._id}}">{{this.title}}</option>
          {{/each}}
        </select>
      </div>
    </div>

    <div class="row mt-3 form-group">
      <div class="col-md-5">
        <label for="amount">金額*</label>
      </div>
      <div class="col-md-7">
        <input type="number" class="form-control" value="{{record.amount}}" min="1" step="1" name="amount" required>
      </div>
    </div>

    <div class="row mt-3">
      <button type="submit" class="btn btn-warning">送出</button>
    </div>
  </form>
</div>